<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" creationComplete="initApp()" frameRate="30" width="1024" height="768" backgroundColor="red">
<mx:Canvas id="mainpanel" width="1024" height="768" backgroundColor="blue" horizontalCenter="0" verticalCenter="0">
	<mx:Script>
		<![CDATA[
			public function initApp():void 
			{
				// says hello at the start, and asks for the user's name
				var app:MyApplication;
				app = new MyApplication();
				mainpanel.addChild(app.done());
				
			}
		]]>
	</mx:Script>
</mx:Canvas>
</mx:Application>
